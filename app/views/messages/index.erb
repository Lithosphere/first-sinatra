<% @messages.each do |message| %>
<div class ="message">
  <h3><a href="/messages/<%= message.id %>"><small>by: <%= message.author %></small></h3>
  <p>
    <%= message.content %>
    <p>
    <a href="http://<%= message.url %>"><%= message.url %></a>
    </p>
    <p>
    <%= message.created_at %>
    </p>
  </p>
</div>

<% end %>

<div><a href="/messages/new">Post a message... It's Free(for now)!</a></div>